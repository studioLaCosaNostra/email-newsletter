{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "paths": {
      "*" : ["src/typings/*"]
    }
  },
  "exclude": [
    "**/*.stub.ts",
    "**/*.test.ts"
  ],
  "compileOnSave": true
}
