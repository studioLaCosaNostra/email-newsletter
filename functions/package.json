{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "nyc mocha -P tsconfig.test.json -r ts-node/register --reporter spec src/offline.test.ts --exit"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/index.js",
  "dependencies": {
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^8.6.1",
    "firebase-functions": "^3.3.0",
    "firebase-functions-test": "^0.1.6",
    "firebase-tools": "^7.6.1",
    "mocha": "^10.2.0",
    "nodemailer": "^6.3.1",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/cors": "^2.8.6",
    "@types/mocha": "^5.2.7",
    "@types/nodemailer": "^6.2.2",
    "@types/sinon": "^7.5.0",
    "@types/uuid": "^3.4.5",
    "tslint": "^5.12.0",
    "typescript": "^3.6.4"
  },
  "private": true,
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "check-coverage": true,
    "sourceMap": true,
    "instrument": true
  }
}
